<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<style>
    .table th,
    .table td {
        border: 1px solid #e3e6f0;
        background-color: #fdfdfe;
    }
</style>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar'); %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('../partials/topbar'); %>

                <!-- Begin Page Content -->
                <div class="container-fluid" id="app">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">My Quizzes</h1>
                    </div>

                    <!-- Content Row -->
                    <div class="row">
                        <div class="col-xl-12 col-md-12">
                            <div class="card mb-3">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Quizzes:</h6>
                                </div>
                                <div class="card-body">

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Quiz Name</th>
                                                <th>Time Limit (minutes)</th>
                                                <th>Created Date</th>
                                                <th>Updated Date</th>
                                                <th>Assigned Candidates</th>
                                                <th>Candidates Started</th>
                                                <th>Candidates Finished</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i < quizzes.length; i++){ %>
                                            <% var quiz = quizzes[i]; %>
                                            <tr>
                                                <td>
                                                    <a href="/quiz/edit/<%= quiz.id %>"
                                                        class="ml-4"><%- quiz.name %></a>
                                                </td>
                                                <td><%- quiz.timeLimitMinutes  %></td>
                                                <td><%- moment(quiz.createdAt).format('MMMM Do YYYY, h:mm:ss a') %></td>
                                                <td><%- moment(quiz.updatedAt).format('MMMM Do YYYY, h:mm:ss a') %></td>
                                                <td><%- quiz.assignedCount %></td>
                                                <td><%- quiz.startedCount %></td>
                                                <td><%- quiz.finishedCount %></td>
                                                <td><a href="/quiz/edit/<%= quiz.id %>" class="btn btn-primary btn-icon-split btn-sm">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-edit"></i>
                                                    </span>
                                                    <span class="text">Edit quiz</span>
                                                </a></td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include('../partials/footer'); %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('../partials/pageend'); %>

</body>

</html>